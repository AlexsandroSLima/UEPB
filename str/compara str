#include <stdio.h>
#include <string.h>

main()
{
    char frase[100];
    char palavra[20];
    char novaPalavra[20];
    int x, tam,k=0,j=0, r= 0;
    char result[100], rest[20];

    printf ("Digite uma frase:\n");
    fgets(frase, sizeof(frase), stdin);
    printf ("nome\n");
    fgets(palavra, sizeof(palavra), stdin);
    printf ("significado:\n");
    fgets(novaPalavra, sizeof(novaPalavra), stdin);
    
    tam=strlen(frase);
    for (x=0;x<tam;x++){
      
        //Procurar palavra a partir de i
        for(int j = x, k = 0;frase[j] ==  palavra[k] && k < tam; j++, k++){
        //Caso a palavra foi encontrada
        if(k >= tam -1){
                //Obter resto da frase
                for(int r = 0; j < tam; r++, j++){
                    if(frase[j] == '\0')
                        rest[r] = ' ';
                    else
                        rest[r] = frase[j];
                }
                
        rest[r] = '\0';
        //Copiar frase  a ser trocada
        for(int j = 0; j < x; j++){
            result[j] = frase[j];
       }
        result[strlen(result)] = '\0';
      //Copiar nova palavra para frase
        for(int k = 0; k <= strlen(novaPalavra) ; k++){
           result[j+k] = novaPalavra[k];
        }       
        
         strcat(result,rest);       
               
                
       }else j = 0;
       }}
    
    
   
 printf ("inicial>> %s\n", frase);
    printf ("final>> %s\n", result);
    printf("%s",palavra);
    printf("%s",novaPalavra);

}
